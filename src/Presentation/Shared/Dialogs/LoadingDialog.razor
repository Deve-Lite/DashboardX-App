@inherits MudComponentBase


@if (_loadingService.IsDialogLoading)
{
    <MudGrid Class="d-flex w-100 p-0 pt-4 pb-4 m-0">
        <MudItem xs="12"
             Class="p-0 m-0 d-flex justify-content-center align-items-center">
            <MudProgressCircular Class="p-0 m-0"
                             Color="Color.Tertiary"
                             Size="Size.Large"
                             Indeterminate="true" />
        </MudItem>
    </MudGrid>
}
else
{
    <MudGrid Class="d-flex w-100 p-0 m-0">
        <MudItem xs="12" Class="p-0 m-0">
            @Title
        </MudItem>
        <MudItem xs="12" Class="p-0 m-0">
            @Content
        </MudItem>
        <MudItem xs="12" Class="dialog-footer">
            @Actions
        </MudItem>
    </MudGrid>
}

@code {

    [Parameter]
    public RenderFragment? Content { get; set; }

    [Parameter]
    public RenderFragment? Title { get; set; }

    [Parameter]
    public RenderFragment? Actions { get; set; }
}
