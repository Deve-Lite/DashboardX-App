@inherits MudComponentBase

<MudGrid Class="d-flex w-100 p-0 m-0">
    @if (_loadingService.IsLoading)
    {
        <MudItem xs="12" Class="p-0 m-0 d-flex justify-content-center align-items-center">
            <MudProgressCircular Class="p-0 m-0"
                             Color="Color.Tertiary"
                             Size="Size.Large"
                             Indeterminate="true" />
        </MudItem>
    }
    else
    {
        <MudItem xs="12" Class="p-0 m-0">
            @Content
        </MudItem>
        <MudItem xs="12" Class="p-0 m-0 dialog-footer">
            @Actions
        </MudItem>
    }
</MudGrid>

@code {

    [Parameter]
    public RenderFragment? Content { get; set; }

    [Parameter]
    public RenderFragment? Actions { get; set; }
}
