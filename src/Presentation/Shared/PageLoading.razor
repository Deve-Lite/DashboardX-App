
@inherits MudComponentBase

@if (_loadingService.IsLoading)
{
    <MudGrid Class="p-0 m-0 w-100 h-100">
        <MudItem xs="12" Class="p-0 m-0 d-flex justify-content-center align-items-center">
                <MudProgressCircular Class="p-0 m-0" 
                Color="Color.Tertiary" 
                Size="Size.Large"
                Indeterminate="true" />
        </MudItem>
    </MudGrid>
}
else if (FailedToLoad)
{
    @FailedToLoadContent
}
else
{
    <MudItem Class="@($"loadable-page {@Class}")">
        @LoadedContent
    </MudItem>
}

@code 
{
    [Parameter]
    public RenderFragment? LoadedContent { get; set; }

    [Parameter]
    public RenderFragment? FailedToLoadContent { get; set; }

    [Parameter]
    public bool FailedToLoad { get; set; } = false;
}
