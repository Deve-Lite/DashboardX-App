<MudPaper Elevation="5" 
          Class="@($"{Padding} m-0 rounded-circle")"
          Style="@($"background-color: {GetBackgroundColor()};")">
    <MudIcon Class="p-0 m-0"
             Size="IconSize"
             Icon="@GetIcon()"/>
</MudPaper>

@code 
{
    [Parameter]
    public Icon Icon { get; set; } = new();
    [Parameter]
    public Size IconSize { get; set; } = Size.Medium;

    public string Padding { get; set; } = "p-2";
    public string DefaultColor { get; set; } = string.Empty;

    public string GetIcon()
    {
        if (string.IsNullOrEmpty(Icon.Name))
            return @Icons.Material.Filled.Home;

        if (!IconUtils.IconList.ContainsKey(Icon.Name))
            return @Icons.Material.Filled.Home;

        return IconUtils.IconList[Icon.Name];
    }

    public string GetBackgroundColor() => string.IsNullOrEmpty(Icon.BackgroundHex) ? ThemeColors.ColorPrimary : Icon.BackgroundHex;
    
}
