@using Presentation.Utils;
<MudPaper Elevation="5" 
          Class="m-0 p-2"
          Style="@($"background-color: {GetBackgroundColor()};")">
    <MudIcon Size="Size.Medium"
             Icon="@IconUtils.GetIcon(Icon?.Name!)"/>
</MudPaper>

@code 
{
    [Parameter]
    public Icon Icon { get; set; } = new();
    public string GetBackgroundColor() => string.IsNullOrEmpty(Icon.BackgroundHex) ? ThemeColors.ColorPrimary : Icon.BackgroundHex;
}
